{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {"url": "https://raw.githubusercontent.com/eibanez/run/master/data.json"},
  "width": 450,
  "height": 150,
  "spacing": 5,
  "mark": {"type": "point", "tooltip": {"content": "data"}},
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "timeUnit": "week",
      "axis": {"title": "Week"}
    },
    "y": {
      "field": "date",
      "type": "ordinal",
      "timeUnit": "day",
      "axis": {"title": null}
    },
    "row": {
      "field": "date",
      "type": "temporal",
      "timeUnit": "year",
      "header": {"title": null, "labelOrient": "right"}
    },
    "size": {
      "field": "distance",
      "type": "quantitative",
      "legend": {"title": "Distance (miles)"}
    },
    "color": {
      "field": "type",
      "type": "nominal",
      "sort": [],
      "scale": {"range": ["#4BBA3E", "#528ECD", "#CD6752"]},
      "legend": {"title": "Type"}
    }
  }
}
