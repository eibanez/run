{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "format": {
      "parse": {
        "date": "utc:'%Y-%m-%dT%H:%M:%S'"
      }
    },
    "name": "data",
    "url": "https://raw.githubusercontent.com/eibanez/run/master/data.json"
  },
  "encoding": {
    "color": {
      "field": "date",
      "legend": {
        "title": null
      },
      "timeUnit": "year",
      "type": "nominal"
    },
    "tooltip": [
      {
        "field": "name",
        "title": "Name"
      },
      {
        "field": "date",
        "timeUnit": "yearmonth",
        "title": "Month"
      },
      {
        "field": "sum_distance",
        "format": ".1f",
        "title": "Distance"
      }
    ],
    "x": {
      "axis": {
        "title": null
      },
      "field": "date",
      "timeUnit": "yearmonth",
      "type": "temporal"
    },
    "y": {
      "aggregate": "sum",
      "axis": {
        "title": "Distance (miles)"
      },
      "field": "distance",
      "type": "quantitative"
    }
  },
  "height": 250,
  "mark": "bar",
  "width": 475
}