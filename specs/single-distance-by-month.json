{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {"url": "https://raw.githubusercontent.com/eibanez/run/master/data.json"},
  "height": 250,
  "width": 500,
  "mark": {"type": "bar", "tooltip": {"content": "data"}},
  "encoding": {
    "x": {
      "field": "date",
      "timeUnit": "yearmonth",
      "type": "temporal",
      "axis": {"title": null}
    },
    "y": {
      "field": "distance",
      "type": "quantitative",
      "aggregate": "sum",
      "axis": {"title": "Distance (miles)"}
    }
  }
}
