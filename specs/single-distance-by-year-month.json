{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {"url": "https://raw.githubusercontent.com/eibanez/run/master/data.json"},
  "height": 250,
  "width": 40,
  "spacing": 2,
  "mark": {"type": "bar", "tooltip": true},
  "encoding": {
    "x": {
      "field": "date",
      "timeUnit": "year",
      "type": "nominal",
      "axis": null
    },
    "y": {
      "field": "distance",
      "type": "quantitative",
      "aggregate": "sum",
      "axis": {"title": "Distance (miles)"}
    },
    "column": {
      "field": "date",
      "type": "temporal",
      "timeUnit": "month",
      "header": {"title": null}
    },
    "color": {
      "field": "date",
      "timeUnit": "year",
      "type": "nominal",
      "legend": {"title": null}
    }
  }
}
