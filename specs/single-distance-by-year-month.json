{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "format": {
      "parse": {
        "date": "utc:'%Y-%m-%dT%H:%M:%S'"
      }
    },
    "name": "data",
    "url": "https://raw.githubusercontent.com/eibanez/run/master/data.json"
  },
  "encoding": {
    "color": {
      "field": "type",
      "legend": {
        "title": null
      },
      "scale": {
        "domain": [
          "Run",
          "Treadmill",
          "Race"
        ],
        "range": [
          "#4BBA3E",
          "#528ECD",
          "#CD6752"
        ]
      },
      "type": "nominal"
    },
    "column": {
      "field": "date",
      "header": {
        "title": null
      },
      "timeUnit": "month",
      "type": "temporal"
    },
    "tooltip": [
      {
        "field": "name",
        "title": "Name"
      },
      {
        "field": "date",
        "timeUnit": "yearmonth",
        "title": "Month"
      },
      {
        "field": "sum_distance",
        "format": ".1f",
        "title": "Distance"
      }
    ],
    "x": {
      "axis": null,
      "field": "date",
      "timeUnit": "year",
      "type": "nominal"
    },
    "y": {
      "aggregate": "sum",
      "axis": {
        "title": "Distance (miles)"
      },
      "field": "distance",
      "type": "quantitative"
    }
  },
  "height": 250,
  "mark": "bar",
  "spacing": 2,
  "width": 40
}