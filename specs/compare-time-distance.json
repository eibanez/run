{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {"url": "https://raw.githubusercontent.com/eibanez/run/master/data.json"},
  "selection": {
    "grid": {
      "type": "interval", "bind": "scales"
    }
  },
  "height": 150,
  "width": 450,
  "spacing": 5,
  "mark": {"type": "point", "tooltip": true},
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {"title": null}
    },
    "y": {
      "field": "distance",
      "type": "quantitative",
      "axis": {"title": "Distance (miles)"}
    },
    "row": {
      "field": "name",
      "type": "nominal",
      "sort": [],
      "header": {"title": null, "labelOrient": "right"}
    },
    "color": {
      "field": "type",
      "type": "nominal",
      "sort": [],
      "scale": {"range": ["#4BBA3E", "#528ECD", "#CD6752"]},
      "legend": {"title": null}
    }
  }
}
