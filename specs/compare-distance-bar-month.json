{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/eibanez/run/master/data.json"
  },
  "height": 150,
  "width": 500,
  "mark": {"type": "bar"},
  "encoding": {
    "x": {
      "field": "date",
      "timeUnit": "yearmonth",
      "type": "temporal",
      "axis": {"title": null}
    },
    "y": {
      "field": "distance",
      "type": "quantitative",
      "aggregate": "sum",
      "axis": {"title": "Distance (miles)"}
    },
    "row": {
      "field": "name",
      "type": "nominal",
      "sort": [],
      "header": {"title": null, "labelOrient": "right"}
    },
    "color": {
      "field": "name",
      "type": "nominal",
      "sort": [],
      "scale": {
        "range": ["goldenrod", "firebrick", "cornflowerblue", "darkorchid"]
      },
      "legend": null
    },
    "tooltip": [
      {"field": "name", "title": "Name"},
      {"field": "date", "title": "Month", "timeUnit": "yearmonth"},
      {"field": "sum_distance", "title": "Distance", "format": ".1f"}
    ]
  }
}
