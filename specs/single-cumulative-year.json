{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "format": {
      "parse": {
        "date": "utc:'%Y-%m-%dT%H:%M:%S'"
      }
    },
    "name": "data",
    "url": "https://raw.githubusercontent.com/eibanez/run/master/data.json"
  },
  "encoding": {
    "color": {
      "field": "year",
      "legend": {
        "format": "%Y",
        "formatType": "time",
        "title": null
      },
      "type": "nominal"
    },
    "order": {
      "field": "year",
      "type": "nominal"
    },
    "tooltip": [
      {
        "field": "title",
        "type": "nominal"
      },
      {
        "field": "name",
        "title": "Name",
        "type": "nominal"
      },
      {
        "field": "total_distance",
        "format": ".1f",
        "title": "Total distance",
        "type": "quantitative"
      },
      {
        "field": "date",
        "timeUnit": "yearmonthdate",
        "title": "Date",
        "type": "temporal"
      },
      {
        "field": "type",
        "title": "Type",
        "type": "nominal"
      },
      {
        "field": "distance",
        "format": ".1f",
        "title": "Distance",
        "type": "quantitative"
      },
      {
        "field": "duration",
        "title": "Duration",
        "type": "nominal"
      },
      {
        "field": "pace",
        "format": ".2f",
        "title": "Pace",
        "type": "quantitative"
      },
      {
        "field": "source",
        "title": "Source",
        "type": "nominal"
      }
    ],
    "x": {
      "axis": {
        "title": null
      },
      "field": "dayofyear",
      "type": "temporal"
    },
    "y": {
      "axis": {
        "title": "Distance (miles)"
      },
      "field": "total_distance",
      "type": "quantitative"
    }
  },
  "height": 250,
  "mark": {
    "point": "transparent",
    "type": "line"
  },
  "transform": [
    {
      "as": "year",
      "field": "date",
      "timeUnit": "year"
    },
    {
      "as": "dayofyear",
      "field": "date",
      "timeUnit": "dayofyear"
    },
    {
      "frame": [
        null,
        0
      ],
      "groupby": [
        "year"
      ],
      "sort": [
        {
          "field": "date",
          "order": "ascending"
        }
      ],
      "window": [
        {
          "as": "total_distance",
          "field": "distance",
          "op": "sum"
        }
      ]
    }
  ],
  "width": 475
}