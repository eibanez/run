{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json", 
  "data": {
    "format": {
      "parse": {
        "date": "date:'%Y-%m-%d'"
      }
    }, 
    "name": "data", 
    "url": "https://raw.githubusercontent.com/eibanez/run/master/data.json"
  }, 
  "encoding": {
    "color": {
      "field": "year", 
      "legend": {
        "format": "%Y", 
        "formatType": "time", 
        "title": null
      }, 
      "type": "nominal"
    }, 
    "x": {
      "axis": {
        "title": null
      }, 
      "field": "dayofyear", 
      "type": "temporal"
    }, 
    "y": {
      "axis": {
        "title": "Distance (miles)"
      }, 
      "field": "total_distance", 
      "type": "quantitative"
    }
  }, 
  "height": 250, 
  "mark": {
    "tooltip": {
      "content": "data"
    }, 
    "type": "line"
  }, 
  "spacing": 5, 
  "transform": [
    {
      "as": "year", 
      "field": "date", 
      "timeUnit": "year"
    }, 
    {
      "as": "dayofyear", 
      "field": "date", 
      "timeUnit": "dayofyear"
    }, 
    {
      "frame": [
        null, 
        0
      ], 
      "groupby": [
        "year"
      ], 
      "sort": [
        {
          "field": "date", 
          "order": "ascending"
        }
      ], 
      "window": [
        {
          "as": "total_distance", 
          "field": "distance", 
          "op": "sum"
        }
      ]
    }
  ], 
  "width": 450
}