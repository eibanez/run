{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "format": {
      "parse": {
        "date": "utc:'%Y-%m-%dT%H:%M:%S'"
      }
    },
    "name": "data",
    "url": "https://raw.githubusercontent.com/eibanez/run/master/data.json"
  },
  "encoding": {
    "color": {
      "field": "name",
      "legend": {
        "title": null
      },
      "scale": {
        "range": [
          "goldenrod",
          "firebrick",
          "cornflowerblue",
          "darkorchid",
          "forestgreen"
        ]
      },
      "sort": [],
      "type": "nominal"
    },
    "tooltip": [
      {
        "field": "name",
        "title": "Name"
      },
      {
        "field": "date",
        "timeUnit": "year",
        "title": "Year"
      },
      {
        "field": "sum_distance",
        "format": ".1f",
        "title": "Distance"
      }
    ],
    "x": {
      "axis": {
        "title": null
      },
      "field": "date",
      "sort": "descending",
      "timeUnit": "year",
      "type": "nominal"
    },
    "xOffset": {
      "field": "name",
      "header": {
        "title": null
      },
      "sort": [],
      "type": "nominal"
    },
    "y": {
      "aggregate": "sum",
      "axis": {
        "title": "Distance (miles)"
      },
      "field": "distance",
      "type": "quantitative"
    }
  },
  "height": 200,
  "layer": [
    {
      "mark": "bar"
    },
    {
      "encoding": {
        "text": {
          "aggregate": "sum",
          "field": "distance",
          "format": ".0f",
          "type": "quantitative"
        }
      },
      "mark": {
        "dy": -7,
        "type": "text"
      }
    }
  ],
  "transform": [
    {
      "filter": "year(datum.date)>=2018"
    }
  ],
  "width": 475
}