{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {"url": "https://raw.githubusercontent.com/eibanez/run/master/data.json"},
  "transform": [
    {"timeUnit": "year", "field": "date", "as": "year"},
    {
      "window": [{
          "op": "sum",
          "field": "distance",
          "as": "total_distance"
      }],
      "sort": [
        {"field": "date", "order": "ascending"}
      ],
      "ignorePeers": false,
      "groupby": [
        "name",
        "year"
      ],
      "frame": [null,0]
    }
  ],
  "width": 450,
  "height": 250,
  "mark": {"type": "line", "tooltip": {"content": "data"}},
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {"title": null}
    },
    "y": {
      "field": "total_distance",
      "type": "quantitative",
      "axis": {"title": "Distance (miles)"}
    },
    "color": {
      "field": "name",
      "type": "nominal",
      "sort": [],
      "scale": {"range": ["goldenrod", "firebrick", "cornflowerblue", "darkorchid", "forestgreen"]},
      "legend": {"title": null}
    },
    "detail": {
      "field": "year",
      "type": "temporal"
    }
  }
}
