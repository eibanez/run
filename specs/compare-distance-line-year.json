{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "format": {
      "parse": {
        "date": "utc:'%Y-%m-%dT%H:%M:%S'"
      }
    },
    "name": "data",
    "url": "https://raw.githubusercontent.com/eibanez/run/master/data.json"
  },
  "encoding": {
    "color": {
      "field": "name",
      "legend": {
        "title": null
      },
      "scale": {
        "range": [
          "goldenrod",
          "firebrick",
          "cornflowerblue",
          "darkorchid",
          "forestgreen"
        ]
      },
      "sort": [],
      "type": "nominal"
    },
    "detail": {
      "field": "year",
      "type": "temporal"
    },
    "x": {
      "axis": {
        "title": null
      },
      "field": "date",
      "type": "temporal"
    },
    "y": {
      "axis": {
        "title": "Distance (miles)"
      },
      "field": "total_distance",
      "type": "quantitative"
    }
  },
  "height": 250,
  "mark": {
    "tooltip": {
      "content": "data"
    },
    "type": "line"
  },
  "transform": [
    {
      "as": "year",
      "field": "date",
      "timeUnit": "year"
    },
    {
      "frame": [
        null,
        0
      ],
      "groupby": [
        "name",
        "year"
      ],
      "ignorePeers": false,
      "sort": [
        {
          "field": "date",
          "order": "ascending"
        }
      ],
      "window": [
        {
          "as": "total_distance",
          "field": "distance",
          "op": "sum"
        }
      ]
    }
  ],
  "width": 475
}