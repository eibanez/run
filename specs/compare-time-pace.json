{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "format": {
      "parse": {
        "date": "utc:'%Y-%m-%dT%H:%M:%S'"
      }
    },
    "name": "data",
    "url": "https://raw.githubusercontent.com/eibanez/run/master/data.json"
  },
  "encoding": {
    "color": {
      "field": "type",
      "legend": {
        "title": null
      },
      "scale": {
        "domain": [
          "Run",
          "Treadmill",
          "Race"
        ],
        "range": [
          "#4BBA3E",
          "#528ECD",
          "#CD6752"
        ]
      },
      "type": "nominal"
    },
    "href": {
      "field": "url",
      "type": "nominal"
    },
    "row": {
      "field": "name",
      "header": {
        "labelOrient": "right",
        "title": null
      },
      "sort": [],
      "type": "nominal"
    },
    "tooltip": [
      {
        "field": "title",
        "type": "nominal"
      },
      {
        "field": "name",
        "title": "Name",
        "type": "nominal"
      },
      {
        "field": "type",
        "title": "Type",
        "type": "nominal"
      },
      {
        "field": "date",
        "timeUnit": "yearmonthdate",
        "title": "Date",
        "type": "temporal"
      },
      {
        "field": "distance",
        "format": ".1f",
        "title": "Distance",
        "type": "quantitative"
      },
      {
        "field": "duration",
        "title": "Duration",
        "type": "nominal"
      },
      {
        "field": "pace",
        "format": ".2f",
        "title": "Pace",
        "type": "quantitative"
      },
      {
        "field": "source",
        "title": "Source",
        "type": "nominal"
      }
    ],
    "x": {
      "axis": {
        "title": null
      },
      "field": "date",
      "type": "temporal"
    },
    "y": {
      "axis": {
        "title": "Pace (min/mile)"
      },
      "field": "pace",
      "scale": {
        "domain": [
          7,
          12.25
        ]
      },
      "type": "quantitative"
    }
  },
  "height": 150,
  "mark": "point",
  "selection": {
    "grid": {
      "bind": "scales",
      "type": "interval"
    }
  },
  "transform": [
    {
      "filter": "year(datum.date)>=2018"
    }
  ],
  "width": 475
}