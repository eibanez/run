{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {"url": "https://raw.githubusercontent.com/eibanez/run/master/data.json"},
  "selection": {
    "grid": {
      "type": "interval", "bind": "scales"
    }
  },
  "height": 250,
  "width": 450,
  "spacing": 5,
  "mark": {"type": "point", "tooltip": {"content": "data"}},
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {"title": null}
    },
    "y": {
      "field": "pace",
      "type": "quantitative",
      "axis": {"title": "Pace (min/mile)"},
      "scale": {"zero": false}
    },
    "color": {
      "field": "type",
      "type": "nominal",
      "sort": [],
      "scale": {"range": ["#4BBA3E", "#528ECD", "#CD6752"]},
      "legend": {"title": null}
    }
  }
}
