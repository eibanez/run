{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "format": {
      "parse": {
        "date": "utc:'%Y-%m-%d %H:%M:%S'"
      }
    },
    "name": "data",
    "url": "https://raw.githubusercontent.com/eibanez/run/master/data.json"
  },
  "transform": [
    {
      "as": "url",
      "calculate": "'https://www.mapmyfitness.com/workout/'+datum.id"
    }
  ],
  "vconcat": [
    {
      "encoding": {
        "color": {
          "field": "type",
          "legend": {
            "title": null
          },
          "scale": {
            "range": [
              "#4BBA3E",
              "#528ECD",
              "#CD6752"
            ]
          },
          "sort": [],
          "type": "nominal"
        },
        "href": {
          "field": "url",
          "type": "nominal"
        },
        "tooltip": [
          {
            "field": "title",
            "type": "nominal"
          },
          {
            "field": "notes",
            "title": "Notes",
            "type": "nominal"
          },
          {
            "field": "name",
            "title": "Name",
            "type": "nominal"
          },
          {
            "field": "type",
            "title": "Type",
            "type": "nominal"
          },
          {
            "field": "date",
            "timeUnit": "yearmonthdate",
            "title": "Date",
            "type": "temporal"
          },
          {
            "field": "distance",
            "format": ".1f",
            "title": "Distance",
            "type": "quantitative"
          },
          {
            "field": "duration",
            "title": "Duration",
            "type": "nominal"
          },
          {
            "field": "pace",
            "format": ".2f",
            "title": "Pace",
            "type": "quantitative"
          }
        ],
        "x": {
          "axis": {
            "title": null
          },
          "field": "date",
          "type": "temporal"
        },
        "y": {
          "axis": {
            "title": "Pace (min/mile)"
          },
          "field": "pace",
          "scale": {
            "zero": false
          },
          "type": "quantitative"
        }
      },
      "height": 175,
      "mark": "point",
      "selection": {
        "grid": {
          "bind": "scales",
          "encodings": [
            "x"
          ],
          "type": "interval"
        }
      },
      "width": 475
    },
    {
      "encoding": {
        "color": {
          "field": "type",
          "legend": {
            "title": null
          },
          "scale": {
            "range": [
              "#4BBA3E",
              "#528ECD",
              "#CD6752"
            ]
          },
          "sort": [],
          "type": "nominal"
        },
        "href": {
          "field": "url",
          "type": "nominal"
        },
        "tooltip": [
          {
            "field": "title",
            "type": "nominal"
          },
          {
            "field": "notes",
            "title": "Notes",
            "type": "nominal"
          },
          {
            "field": "name",
            "title": "Name",
            "type": "nominal"
          },
          {
            "field": "type",
            "title": "Type",
            "type": "nominal"
          },
          {
            "field": "date",
            "timeUnit": "yearmonthdate",
            "title": "Date",
            "type": "temporal"
          },
          {
            "field": "distance",
            "format": ".1f",
            "title": "Distance",
            "type": "quantitative"
          },
          {
            "field": "duration",
            "title": "Duration",
            "type": "nominal"
          },
          {
            "field": "pace",
            "format": ".2f",
            "title": "Pace",
            "type": "quantitative"
          }
        ],
        "x": {
          "axis": {
            "title": null
          },
          "field": "date",
          "type": "temporal"
        },
        "y": {
          "axis": {
            "title": "Distance (mile)"
          },
          "field": "distance",
          "scale": {
            "zero": true
          },
          "type": "quantitative"
        }
      },
      "height": 175,
      "mark": "point",
      "selection": {
        "grid": {
          "bind": "scales",
          "encodings": [
            "x"
          ],
          "type": "interval"
        }
      },
      "width": 475
    }
  ]
}